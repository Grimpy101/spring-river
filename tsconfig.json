{
    "compilerOptions": {
        "lib": ["ES2017", "DOM"],
        "target": "ES6",
        "module": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "scripts",
    },
    "include": [
        "development/*.ts"
    ],
    "exclude": [
        "scripts/*",
        "node_modules"
    ]
}